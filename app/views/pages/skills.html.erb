
<div class="container" style="margin-top: 5%">
  <div class="row">
    <div class="col-md-12">
      <section class="main">
        <div id="sb-container" class="sb-container">
          <div>
            <span class="sb-icon icon-cog"></span>
            <h4><span>Always Working On More Skills</span></h4>
          </div>
          <div>
            <span class="sb-icon icon-flight"></span>
            <h4><span>React.JS</span></h4>
            <%= image_tag("react-icon.png", size: "60x60") %>
          </div>  
          <div>
            <span class="sb-icon icon-eye"></span>
            <h4><span>AWS</span></h4>
            <%= image_tag("aws-icon.png", size: "60x60") %>
          </div>  
          <div>
            <span class="sb-icon icon-install"></span>
            <h4><span>Heroku</span></h4>
            <%= image_tag("heroku-icon.jpg", size: "60x60") %>
          </div>  
          <div>
            <span class="sb-icon icon-bag"></span>
            <h4><span>JavaScript</span></h4>
            <%= image_tag("javascript-icon.png", size: "60x60") %>
          </div>  
          <div>
            <span class="sb-icon icon-globe"></span>
            <h4><span>CSS3</span></h4>
            <%= image_tag("css3-icon.jpeg", size: "60x60") %>
          </div>  
          <div>
            <span class="sb-icon icon-picture"></span>
            <h4><span>Ruby on Rails</span></h4>
            <%= image_tag("rubyonrails-icon.png", size: "60x60") %>                     
          </div>  
          <div>
            <span class="sb-icon icon-video"></span>
            <h4><span>SQL</span></h4>
            <%= image_tag("SQL-icon.png", size: "60x60") %>                     
          </div>  
          <div>
            <span class="sb-icon icon-download"></span>
            <h4><span>HTML5</span></h4>
            <%= image_tag("HTML5-icon.png", size: "60x60") %>                      
          </div>
          <div>
            <span class="sb-icon icon-mobile"></span>
            <h4><span>Git</span></h4>
            <%= image_tag("github-icon.png", size: "60x60") %>                      
          </div>
          <div>
            <span class="sb-icon icon-camera"></span>
            <h4><span>Ruby</span></h4>
            <%= image_tag("ruby-icon.png", size: "60x60") %>                     
          </div>            
          <div>
            <h4><span>My Set Of Skills</span></h4>
            <span class="sb-toggle">Click to open / close</span>
            <h5><span style="margin-top: 30px">Skills</span></h5>                     
          </div>
        </div><!-- sb-container --> 
      </section>
    </div>
  </div>
</div>


<div class="row hidden-md hidden-lg" style="padding-bottom: 60px; padding-top: 50px; z-index: 10000">
  <div class="col-md-12 col-xs-12 col-sm-12 text-center">
    <a href="<%= pages_portfolio_path %>"><%= image_tag("arrow_left.png", size: "300x80") %></a>
    <a href="<%= pages_contact_path %>"><%= image_tag("arrow_right.png", size: "300x80") %></a>
  </div>
</div>  
<div class="row hidden-xs hidden-sm" style="padding-top: 50px; z-index: 10000">
  <div class="col-md-12 col-xs-12 col-sm-12 text-center">
    <a href="<%= pages_portfolio_path %>"><%= image_tag("arrow_left.png", size: "400x80") %></a>
    <a href="<%= pages_contact_path %>"><%= image_tag("arrow_right.png", size: "400x80") %></a>
  </div>
</div>

<script type="text/javascript">
$(function() {
  $( '#sb-container' ).swatchbook( {
          // number of degrees that is between each item
          angleInc : 15,
          neighbor : 15,
          // if it should be closed by default
          initclosed : true,
          // index of the element that when clicked, triggers the open/close function
          // by default there is no such element
          closeIdx : 11
        } );
});
</script>


